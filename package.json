{
  "name": "@enegalan/contextmenu.js",
  "version": "1.4.0",
  "description": "A smooth and highly customizable JavaScript context-menu library",
  "license": "MIT",
  "author": "Eneko Galan",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "sideEffects": false,
  "files": ["dist"],
  "keywords": [
    "context-menu",
    "contextmenu",
    "right-click",
    "menu",
    "dropdown",
    "vanilla-js",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egalan/contextmenu.js.git"
  },
  "scripts": {
    "build": "tsup && csso src/style.css -o dist/style.css",
    "dev": "npm run build && concurrently \"tsup --watch\" \"vite\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "csso-cli": "^4.0.2",
    "terser": "^5.36.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}
