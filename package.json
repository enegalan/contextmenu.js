{
  "name": "contextmenu.js",
  "version": "1.1.0",
  "description": "A smooth and highly customizable JavaScript context-menu library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src/default-styles.css",
    "src/dark-mode-styles.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "npm run build && concurrently \"tsup --watch\" \"vite\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}
